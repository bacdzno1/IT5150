            <script>
                $(document).ready(function () {
                    const ITEMS_PER_PAGE = 10;
                    let currentPageCate = 0;

                    function showItems(page) {
                        const $list = $('#news_cate_list');
                        const $items = $list.find('[data-index]');
                        $items.each(function (index) {
                            $(this).toggle(index >= page * ITEMS_PER_PAGE && index < (page + 1) * ITEMS_PER_PAGE);
                        });
                    }

                    function updatePageIndicator(page) {
                        const $list = $('#news_cate_list');
                        const totalItems = $list.find('[data-index]').length;
                        const totalPages = Math.ceil(totalItems / ITEMS_PER_PAGE);
                        $('#pageIndicatorCate').text(`Trang ${page + 1} / ${totalPages}`);
                    }

                    function updateNavigationButtons(page) {
                        const $list = $('#news_cate_list');
                        const totalItems = $list.find('[data-index]').length;
                        const totalPages = Math.ceil(totalItems / ITEMS_PER_PAGE);

                        if (page === 0) {
                            $('#prevCate').css("opacity", "0.5");
                        } else {
                            $('#prevCate').css("opacity", "1");
                        }

                        if (page >= totalPages - 1) {
                            $('#nextCate').css("opacity", "0.5");
                        } else {
                            $('#nextCate').css("opacity", "1");
                        }
                    }

                    function navigate(direction) {
                        const totalItems = $('#news_cate_list').find('[data-index]').length;
                        const totalPages = Math.ceil(totalItems / ITEMS_PER_PAGE);

                        if (direction === 'next' && currentPageCate < totalPages - 1) {
                            currentPageCate++;
                        } else if (direction === 'prev' && currentPageCate > 0) {
                            currentPageCate--;
                        }

                        showItems(currentPageCate);
                        updatePageIndicator(currentPageCate);
                        updateNavigationButtons(currentPageCate);
                    }

                    // Initialize display
                    showItems(currentPageCate);
                    updatePageIndicator(currentPageCate);
                    updateNavigationButtons(currentPageCate);

                    // Event handlers
                    $('#prevCate').click(function () {
                        navigate('prev');
                    });

                    $('#nextCate').click(function () {
                        navigate('next');
                    });
                });
            </script>
