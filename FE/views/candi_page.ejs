                    params.city = searchCity;
                }
                var queryString = $.param(params);
                var newUrl = '/tim-ung-vien';
                if (queryString) {
                    newUrl += '?' + queryString;
                }
                window.location.href = newUrl;
            }

            $('.search-btn').click(function () {
                handleSearch()
            });
        
            function loadMoreData(page) {
                var url = 'http://localhost:3050/api/topcv1s/new/SearchCandi';
                var nameValue = getParameterByName('name', window.location.href);
                var cityValue = getParameterByName('city', window.location.href);
                var catidValue = getParameterByName('catid', window.location.href);
                var district = getParameterByName('district', window.location.href);
                var exp = getParameterByName('exp', window.location.href);
                var money = getParameterByName('money', window.location.href);
                var address = getParameterByName('address', window.location.href);
                var level = getParameterByName('level', window.location.href);
                var type = getParameterByName('type', window.location.href);
                var accessToken = getCookie('accessToken');
                $.ajax({
                    url: url,
                    type: 'POST',
                    contentType: 'application/json',
                    headers: {
                        Authorization: 'Bearer ' + accessToken
                    },
                    data: JSON.stringify({
                        keywords: nameValue,
                        city: cityValue,
                        pageSize: 10,
                        page: page
                    }),
                    beforeSend: function() {
                        $('.loading-icon').show();
                    },
                    success: function (response) {
                        if (response.data.data.length > 0) {
                            totalItems = response.data.total;
                            response.data.data.forEach((item, index) => {
                                var slug = convertToSlug(item.use_name);
                                var citiesHtml = item.use_city_job.map(function (city) {
                                    return `${city}, `;
                                }).join('').slice(0, -2);
                                var isSaved = item.checkSave ? true : false;
                                var saveButtonText = isSaved ? 'Đã lưu' : 'Lưu';
                                var saveButtonClass = isSaved ? 'saved' : '';
                                var saveImg = isSaved?'/images/icon/saved_candi_icon.svg':'/images/icon/save_candi_icon.svg';
                                var html = `
                                <div class="lcandi-list-item d-flex align-c justify-b bg-white gap-3">
                                    <div class="lcandi-list-info d-flex gap-4">
                                        <div class="lcandi-list-avar">
                                            <a href="${slug}-uv-${item.use_id}">
                                                <img class="rounded-circle outline_main" loading="lazy" width="116" height="116" alt="Avar Ứng viên"
                                                    onerror="this.onerror=null;this.src='/images/img/default_logo.jpg';" src="${item.use_logo}">
                                            </a>
                                            <div class="lcandi-list-onltime color-main">
                                            </div>
                                        </div>
                                        <div class="lcandi-list-detail">
                                            <div class="d-flex gap-4 mb-3">
                                                <div class="lcandi-list-avar-mb rounded-circle">
                                                    <a href="${slug}-uv-${item.use_id}">
                                                        <img class="rounded-circle outline_main" width="98" height="98" alt="Avar Ứng viên"
                                                            onerror="this.onerror=null;this.src='/images/img/default_logo.jpg';" src="${item.use_logo}">
                                                    </a>
                                                    <div class="lcandi-list-onltime color-main">
                                                    </div>
                                                </div>
                                                <div class="locandi-list-mb">
                                                    <h3 class="lcandi-list-pos fs-4 fw-600">
                                                        <a href="${slug}-uv-${item.use_id}">
                                                            ${item.use_job_name}
                                                        </a>
                                                    </h3>
                                                    <a class="lcandi-list-name fs-5 color-main" href="${slug}-uv-${item.use_id}">
                                                        ${item.use_name}
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="lcandi-list-gener d-flex">
                                                <div class="lcandi-list-gloc d-flex align-c gap-2 w-50">
