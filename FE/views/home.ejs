        $(document).ready(function () {
            var isDown = false;
            var startX;
            var scrollLeft;
            var inertia;
            var scrollSpeed = 0;
            var momentumInterval;
            var scroll_able;

            var isMoving = false;
            var moveTimeout;

            function startDragging(e, $element) {
                isDown = true;
                isMoving = false;
                clearTimeout(moveTimeout);
                $element.addClass('active');
                startX = e.pageX || e.originalEvent.touches[0].pageX;
                scrollLeft = $element.scrollLeft();
                clearInterval(momentumInterval);
                scroll_able = $element;
            }

            function stopDragging() {
                if (!isDown) return;
                isDown = false;
                if (isMoving) {
                    clearTimeout(moveTimeout);
                    momentumScroll();
                }
            }

            function drag(e) {
                if (!isDown) return;
                e.preventDefault();
                var x = e.pageX || e.originalEvent.touches[0].pageX;
                var walk = (x - startX) * 1.5;
                scrollSpeed = (x - startX);
                scroll_able.scrollLeft(scrollLeft - walk);
                clearTimeout(moveTimeout);
                isMoving = true;
                moveTimeout = setTimeout(function () {
                    isMoving = false;
                }, 100);
            }

            function momentumScroll() {
                inertia = (scrollSpeed > 0 ? 15 : -15);
                momentumInterval = setInterval(function () {
                    if (Math.abs(inertia) < 0.5) {
                        clearInterval(momentumInterval);
                        return;
                    }
                    scroll_able.scrollLeft(scroll_able.scrollLeft() - inertia);
                    inertia *= 0.95;
                }, 20);
            }

            $('.scroll_able').on('mousedown', function (e) {
                startDragging(e, $(this));
            });

            $(document).on('mouseup', stopDragging);
            $(document).on('mousemove', drag);
            $('.scroll_able').on('mouseleave', stopDragging);

            $('.scroll_able').on('touchstart', function (e) {
            
                startDragging(e, $(this));
            });

            $('.scroll_able').on('touchend', stopDragging);
            $('.scroll_able').on('touchmove', drag);

            $('.pre-btn').on('click', function () {
                var $scroll_able = $(this).siblings('.fil-cont').find('.scroll_able:visible');
                $scroll_able.animate({
                    scrollLeft: $scroll_able.scrollLeft() - 150
                }, 300);
            });

            $('.next-btn').on('click', function () {
                var $scroll_able = $(this).siblings('.fil-cont').find('.scroll_able:visible');
                $scroll_able.animate({
                    scrollLeft: $scroll_able.scrollLeft() + 150
                }, 300);
            });
        });


        $(document).ready(function () {
            $('.jobs-compa').each(function () {
                var tooltipText = $(this).attr('data-tooltip');
                var $tooltipContent = $('<div class="tooltip-content"></div>').text(tooltipText);
                $(this).append($tooltipContent);

                $(this).on('mouseenter', function () {
                    $tooltipContent.css('opacity', 1);
                });

                $(this).on('mouseleave', function () {
                    $tooltipContent.css('opacity', 0);
                });
            });
        });

        function paginateJobs(jobListSelector, itemsPerPage) {
            const $jobList = $(jobListSelector + ' .list-slide');
            const $prevNav = $(jobListSelector + ' .pre-nav');
            const $nextNav = $(jobListSelector + ' .next-nav');
            const $pageNav = $(jobListSelector + ' .page-nav');

            const $items = $jobList.find('.slide-item');
            let currentPage = 1;
            const totalPages = Math.ceil($items.length / itemsPerPage);

            function showPage(page) {
                const start = (page - 1) * itemsPerPage;
                const end = start + itemsPerPage;
                $items.hide().slice(start, end).show();
                if (totalPages > 0) {
                    $pageNav.text(`${page}/${totalPages} Trang`);
                }
                toggleNavButtons();
            }

            function toggleNavButtons() {
                if (totalPages <= 1) {
                    $prevNav.addClass('hidden');
                    $nextNav.addClass('hidden');
                } else {
                    $prevNav.removeClass('hidden');
                    $nextNav.removeClass('hidden');
                }
            }

            $prevNav.off('click').on('click', function () {
                if (currentPage > 1) {
                    currentPage--;
                    showPage(currentPage);
                }
            });

            $nextNav.off('click').on('click', function () {
                if (currentPage < totalPages) {
                    currentPage++;
                    showPage(currentPage);
                }
            });
            showPage(currentPage);
            toggleNavButtons();
        }

        $(document).ready(function () {
            function setupPagination() {
                if ($(window).width() < 1024) {
                    paginateJobs('.top-emp', 2);
                } else if ($(window).width() < 768) {
                    paginateJobs('.top-emp', 1);
                } else {
                    paginateJobs('.top-emp', 4);
                }
                if ($(window).width() > 1024) {
                    paginateJobs('.top-emp', 4);
                    paginateJobs('.hot-caarer', 8);
                } else if ($(window).width() > 576) {
                    paginateJobs('.hot-caarer', 4);
                    paginateJobs('.top-emp', 2);
                } else {
                    paginateJobs('.top-emp', 1);
                    paginateJobs('.hot-caarer', 2);
                }
            }

            if ($(window).width() > 480) {
                setupPagination();
            }else{
                let hasSet = false; 
                $(window).on('scroll', function() {
                    if (!hasSet) { 
                        hasSet = true;
                        setupPagination();
                    }
                });
            }
            $(window).resize(setupPagination);
        });
    </script>
