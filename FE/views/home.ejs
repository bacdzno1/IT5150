        $(document).ready(function () {
            function filter(filterClass) {
                const $filList = $(filterClass + ' .fil-list');
                const $filItems = $(filterClass + ' .fil-item');
                const $filCont = $(filterClass + ' .fil-cont');
                const $prevBtn = $(filterClass + ' .pre-btn');
                const $nextBtn = $(filterClass + ' .next-btn');
                const itemWidth = $filItems.outerWidth(true);
                const paddingLeft = parseInt($filItems.css('padding-left'), 10);
                const paddingRight = parseInt($filItems.css('padding-right'), 10);
                const gap = parseInt($filItems.css('margin-right'), 10) || 16;
                const fullItemWidth = itemWidth + paddingLeft + paddingRight + gap;
                const visibleWidth = $filCont.width();
                const totalItems = $filItems.length;
                const totalWidth = totalItems * fullItemWidth - gap;
                const maxScroll = totalWidth - visibleWidth;
                let currentScroll = 0;

                function updatePosition() {
                    $filList.css('transform', `translateX(-${currentScroll}px)`);
                }

                function updateButtons() {
                    $prevBtn.toggleClass('disabled', currentScroll === 0);
                    $nextBtn.toggleClass('disabled', currentScroll >= maxScroll);
                }

                updateButtons();
            }

