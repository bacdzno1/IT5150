<script src="/js/common.js"></script>
<script>
    $(document).ready(function () {
        $('.lnav-tog').click(function () {
            var lnavList = $(this).next('.lnav-list');
            lnavList.slideToggle(400, function () {
                if (lnavList.is(':visible')) {
                    $('.lnav.bg-main').animate({
                        scrollTop: lnavList.offset().top + lnavList.outerHeight() - $('.lnav.bg-main').height()
                    }, 400);
                }
            });
        });
    });
    $(document).ready(function () {
        const lnavItemActive = $('.lnav-list-link.active')
        if (lnavItemActive) {
            const parent = $('.lnav-list-link.active').parents('.lnav-list')
            parent.slideToggle();
        }
    })
</script>
<script>
    $(document).ready(function () {
        $('#dangTinMoiLink').on('click', function (event) {
            event.preventDefault();
            $('body').fadeOut(500, function () {
                window.location.href = '/ntd/dang-tin-tuyen-dung';
            });
            $('body').addClass('fade-in');
        });
    });
</script>
