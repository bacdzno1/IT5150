            <div class="lnav-tog">
                <img src="/images/icon/mana_acc.svg" width="27" height="22.74" alt="Manager Account Icon">
                Quản lý tài khoản
            </div>
            <div class="lnav-list">
                <div class="d-flex flex-dr-c">
                    <a class="lnav-list-link <%= currentUrl === '/ntd/cap-nhat-thong-tin-cong-ty' ? 'active' : '' %>" href="/ntd/cap-nhat-thong-tin-cong-ty">Cập nhật thông tin</a>
                    <a class="lnav-list-link <%= currentUrl === '/ntd/doi-mat-khau-nha-tuyen-dung' ? 'active' : '' %>" href="/ntd/doi-mat-khau-nha-tuyen-dung">Đổi mật khẩu</a>
                </div>
            </div>
        </div>
